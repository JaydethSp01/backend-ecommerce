{
  "name": "tekashi-shoes-backend",
  "version": "1.0.0",
  "description": "Backend para Tekashi Shoes - E-commerce de zapatos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node seed.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t tekashi-backend .",
    "docker:run": "docker run -p 8080:8080 tekashi-backend",
    "health": "curl -f http://localhost:8080/api/health || exit 1"
  },
  "keywords": [
    "ecommerce",
    "shoes",
    "nodejs",
    "mongodb",
    "firebase"
  ],
  "author": "Tekashi Shoes Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "firebase-admin": "^11.11.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
